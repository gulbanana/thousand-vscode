{
	"name": "thousand",
	"version": "0.2.3",
	"publisher": "gulbanana",
	"license": "GPL-3.0-or-later",
	"displayName": "Thousand Words",
	"description": "Language support for thousand words (.1000 files) in VS Code.",
	"repository": {
		"type": "git",
		"url": "https://github.com/gulbanana/thousand-vscode"
	},
	"categories": [
		"Programming Languages",
		"Visualization"
	],
	"dependencies": {
		"command-exists": "^1.2.9",
		"vscode-languageclient": "^7.0.0"
	},
	"devDependencies": {
		"@types/command-exists": "^1.2.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@vscode/test-electron": "^1.6.2",
		"esbuild": "^0.13.8",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.4.3"
	},
	"extensionDependencies": [
		"ms-dotnettools.vscode-dotnet-runtime"
	],
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"compile": "npm run esbuild-base -- --sourcemap",
		"watch": "tsc -watch -p ./",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"main": "./out/extension.js",
	"engines": {
		"vscode": "^1.61.0"
	},
	"activationEvents": [
		"onCommand:thousand.preview",
		"onLanguage:thousand"
	],
	"contributes": {
		"commands": [
			{
				"command": "thousand.preview",
				"title": "Thousand Words: Open Preview to the Side"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Thousand Words",
			"properties": {
				"thousand.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"thousand.client.debugServer": {
					"scope": "window",
					"type": "boolean",
					"default": false,
					"description": "Launches a debugger when the language server starts."
				},
				"thousand.client.serverPath": {
					"scope": "window",
					"type": "string",
					"default": "thousand-server",
					"description": "Override the default language server with your own copy."
				},
				"thousand.client.serverType": {
					"scope": "window",
					"type": "string",
					"default": "command",
					"description": "project | assembly | command"
				},
				"thousand.server.dummy": {
					"scope": "window",
					"type": "string",
					"default": "foobar",
					"description": "Test setting for server-side config."
				}
			}
		},
		"languages": [
			{
				"id": "thousand",
				"extensions": [
					".1000"
				],
				"aliases": [
					"Thousand Words"
				],
				"configuration": "thousand.language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "thousand",
				"scopeName": "source.thousand",
				"path": "thousand.tmGrammar.json"
			}
		]
	}
}
